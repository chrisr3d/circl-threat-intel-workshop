{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "pip install -r requirements.txt && jupyter notebook --generate-config",
  "postCreateCommand": "",
  "forwardPorts": [8888],
  "postStartCommand": "jupyter notebook --no-browser --ip=0.0.0.0 --port=8888",
  "customizations": {
    "codespaces": {
      "openFiles": []
    },
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python"
      ]
    }
  }
}